#!/bin/sh
# Jovan Lanik's IBM logo script 1.0
# www.github.com/jovanlanik
# clean and simple

line() {
	printf '\033[31m%s' "$1"
	printf '\033[32m%s' "$2"
	printf '\033[34m%s' "$3"
	printf "\033[0m\n"
}

line ' _______  ' '_________    ' '_____         _____'
line ' _______  ' '___________  ' '______       ______'
line '   ___    ' '  ___   ___  ' '  _____     _____  '
line '   ___    ' '  ________   ' '  ___ ___ ___ ___  '
line '   ___    ' '  ________   ' '  ___  _____  ___  '
line '   ___    ' '  ___   ___  ' '  ___   ___   ___  '
line ' _______  ' '___________  ' '_____    _    _____'
line ' _______  ' '_________    ' '_____    .    _____'
echo

